<div class="container">
	<br><br>
	<h1 style="display: inline-block; vertical-align: bottom"> Suas Turmas </h1>
	<form class="float-right" style="display: inline-block; vertical-align: bottom" action="/turma/create-turma/<%=idProfessor%>" method="get">
		<input type="submit" value="Criar nova turma" class="btn btn-primary">
	</form>
	<table style="margin-top: 10px" class="table table-striped">
		<thead>
			<tr>
				<th>Nome</th>
				<th>Número de alunos</th>
				<th>Opções</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<%turmas.forEach(function(turma){ %>
				<tr>
					<td>
						<a href="/turma/detalhes/<%=turma.id%>"><%=turma.nome%></a>
					</td>
					<td><%=turma.alunos.length%></td>
					<td>
						<form action="/turma/edit-turma/<%=turma.id%>" method="GET">
							<input type="submit" value="Editar" class="btn btn-primary">
						</form>
					</td>
					<td>
						<form action="/turma/confirm-delete/<%=turma.id%>/<%=turma.professor%>" method="GET">
							<input type="submit" value="Excluir" class="btn btn-danger">
						</form>
					</td>
				</tr>
			<% }) %>
		</tbody>
	</table>
</div>