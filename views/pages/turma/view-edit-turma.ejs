<div class="container">
    <br><br>
    <h1 style="display: inline-block; vertical-align: top">Editar turma</h1>
    <button style="display: inline-block; vertical-align: top" class="btn btn-primary float-right" onclick="updateTurma()">Salvar alterações</button><br>
    <% if(turma){%>
        <script>
            turma = JSON.parse ('<%-JSON.stringify(turma) %>');
        </script>
    <% } %>
    <script src="/turma/edit-turma.js"></script>
    <form>
        <h4 style="display: inline-block">Nome: </h4>
        <input type="text" id="bota-nome-turma" value="<%=turma.nome%>"><br><br>
        <input class="btn btn-primary" type="button" onclick="getAluno()" value="Pesquisar aluno">
        <input type="text" id="bota-nome-aluno">
    </form>
    <table style="margin-top: 20px" class="table table-striped">
        <thead>
            <tr>
                <th>Alunos adicionados</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="lista-alunos">
        </tbody>
    </table>
    <script>
    	reloadList();
    </script>
</div>